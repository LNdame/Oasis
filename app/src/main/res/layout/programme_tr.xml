<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableRow  android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/txtProgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="10sp"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:text="Name" />

    <TextView
        android:id="@+id/txtProgDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="10sp"
        android:padding="5dp"
        android:text="Duration and Cost" />

    <TextView
        android:id="@+id/txtProgPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="10sp"
        android:padding="5dp"
        android:text="For Primary of High \n School Learner" />

    <TextView
        android:id="@+id/txtProgEducator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="10sp"
        android:padding="5dp"
        android:text="For Educator \nor Parent" />
    <TextView
        android:id="@+id/txtProgFreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="10sp"
        android:padding="5dp"
        android:text="Frequency" />

    </TableRow>
    </TableLayout>

</LinearLayout>
