<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="inqb8.ansteph.oasis.toolkit.ToolkitItemDetail"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/white_back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            style="@style/ThemeOverlay.FirebaseIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/desc_OASIS_lockup"
            android:src="@drawable/file" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/title_bottom_margin"
            android:text="Toolkit Item"
            android:theme="@style/ThemeOverlay.MyTitleText" />

        <View
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>

    <RelativeLayout
        android:background="@color/white_back"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/title_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/title_bottom_margin"
            android:text="Description:"
            android:theme="@style/ThemeOverlay.MyaboutText" />


        <android.support.v4.widget.NestedScrollView
            android:layout_below="@+id/title_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttonLayout"
            android:paddingBottom="6dp"
            >
        <TextView
            android:id="@+id/title_descdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_bottom_margin"

        android:text="@string/dummy_text"
        android:theme="@style/ThemeOverlay.MyaboutText" />

        </android.support.v4.widget.NestedScrollView>




        <LinearLayout
            android:id="@+id/buttonLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:weightSum="3"
            android:paddingTop="10dp"
            >


            <inqb8.ansteph.oasis.customview.BlockButton

                app:pushDepthDp="6"
                android:layout_weight="1"
                app:buttonColor="#adb6b7"
                app:buttonGapColor="#292424"
                android:id="@+id/btnEmailItem"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onEmailClicked"
                android:orientation="vertical">

                <TextView
                    android:minWidth="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:text="Email" />

            </inqb8.ansteph.oasis.customview.BlockButton>




            <inqb8.ansteph.oasis.customview.BlockButton

                app:pushDepthDp="6"
                android:layout_weight="1"
                app:buttonColor="#adb6b7"
                app:buttonGapColor="#292424"
                android:id="@+id/btnpreviewitem"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onPreviewClicked"
                android:orientation="vertical">

                <TextView
                    android:minWidth="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:text="Preview" />

            </inqb8.ansteph.oasis.customview.BlockButton>

            <inqb8.ansteph.oasis.customview.BlockButton

                app:pushDepthDp="6"
                android:layout_weight="1"
                app:buttonColor="#adb6b7"
                app:buttonGapColor="#292424"
                android:id="@+id/btndownload"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onDownloadClicked"
                android:orientation="vertical">

                <TextView
                    android:minWidth="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:text="Download" />

            </inqb8.ansteph.oasis.customview.BlockButton>

        </LinearLayout>

    </RelativeLayout>





</LinearLayout>
