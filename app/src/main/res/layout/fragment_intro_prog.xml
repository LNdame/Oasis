<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="inqb8.ansteph.oasis.toolkit.fragitems.IntroProgFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"

        android:background="@color/white_back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            style="@style/ThemeOverlay.FirebaseIcon"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:contentDescription="@string/desc_OASIS_lockup"
            android:src="@drawable/file" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/title_bottom_margin"
            android:text="Introducing the Programme"
            android:theme="@style/Toolkit_item_title" />

        <View

            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <HorizontalScrollView
            android:background="@color/white_back"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnInfoForPrincipal"
                    android:drawableLeft="@drawable/ic_pdf_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/doc_border"
                    android:text="Info for Principals" />

                <Button
                    android:id="@+id/btnInfoParent"
                    android:drawableLeft="@drawable/ic_pdf_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/doc_border"
                    android:text="Info for Parents" />

                <Button
                    android:id="@+id/btnLettertolearner"
                    android:drawableLeft="@drawable/ic_pdf_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/doc_border"
                    android:text="Letter to Parents" />

                <Button
                    android:id="@+id/btnInvitationtolearner"
                    android:drawableLeft="@drawable/ic_pdf_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/doc_border"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="Invitation for learner" />


            </LinearLayout>

        </HorizontalScrollView>
        <View

            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/white_back"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <inqb8.ansteph.oasis.customview.TextViewLevelOne
                app:infotext="For NGOs :"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <inqb8.ansteph.oasis.customview.TextViewLevelTwo
                app:infotext="How do NGOs get buy-in from teachers, parents and learners?"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <inqb8.ansteph.oasis.customview.TextViewLevelThree
                app:infotext="Pitching program to teachers (Info for Principals) "

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <inqb8.ansteph.oasis.customview.TextViewLevelThree
                app:infotext="Pitching program to parents (Info for Parents)"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <inqb8.ansteph.oasis.customview.TextViewLevelThree
                app:infotext="Pitching program to learners"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <inqb8.ansteph.oasis.customview.TextViewLevelThree
                app:infotext="Important documents to share"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




            <inqb8.ansteph.oasis.customview.TextViewLevelTwo
                app:infotext="How to formalise relationship with parents and learners?"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <inqb8.ansteph.oasis.customview.TextViewLevelThree
                app:infotext="Parent letter of permission template (Letter to Parents)"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <inqb8.ansteph.oasis.customview.TextViewLevelThree
                app:infotext="Learner letter of invitation template (Invitation for Learners)"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />





                <!-- End of first section -->


            <inqb8.ansteph.oasis.customview.TextViewLevelOne
                app:infotext="For Schools:"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <inqb8.ansteph.oasis.customview.TextViewLevelTwo
                app:infotext="What questions should be kept in mind when accepting a new programme?"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <inqb8.ansteph.oasis.customview.TextViewLevelThree
                app:infotext="Is there a level of commitment from staff and learners?"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <inqb8.ansteph.oasis.customview.TextViewLevelThree
                app:infotext="What are the space and schedule demands of the programme?"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <inqb8.ansteph.oasis.customview.TextViewLevelThree
                app:infotext="Are there any safety precautions to be aware of (late evening/early morning/off-site activities)?"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <inqb8.ansteph.oasis.customview.TextViewLevelThree
                app:infotext="What measures does the school take for liabilities of lost/stolen property during the programme run?"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <inqb8.ansteph.oasis.customview.TextViewLevelThree
                app:infotext="Has the NGO been informed of school policies and expectations of on site programmes?"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <!-- End of Second section -->







        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
